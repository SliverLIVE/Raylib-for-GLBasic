namespace LIB{
	#include "raylib.h"
	
	DGArray<Color>_Color;
	int CreateColorInstance(Color c)
	{
		DIMPUSH(_Color, c);
		return LEN(_Color())-1;		
	}
	Color GetColorInstance(int index)
	{
		return _Color(index);
	}
	
	DGArray<Font>_Font;
	int CreateFontInstance(Font f)
	{
		DIMPUSH(_Font, f);
		return LEN(_Font())-1;
	}
	Font GetFontInstance(int index)
	{
		return _Font(index);
	}	
}

