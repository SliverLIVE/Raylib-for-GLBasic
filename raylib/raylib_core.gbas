FUNCTION ColorInstance: r, g, b, a
	INLINE
		LIB::Color color;
		
		color.r = r;
		color.g = g;
		color.b = b;
		color.a = a;		
		return LIB::CreateColorInstance(color);
	ENDINLINE
ENDFUNCTION 

FUNCTION FontInstance:
INLINE
	LIB::Font font;
	return LIB::CreateFontInstance(font);
ENDINLINE
